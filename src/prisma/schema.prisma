// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(cuid())
  first_name     String?
  last_name      String?
  email          String @unique
  password       String?
  role           Role @default(USER)
}

enum Role {
  USER
  ADMIN
  OWNER
}
